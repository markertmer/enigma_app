<%= form_with url: path, method: :post, local: true do |f| %>
  <%= f.label :message %>
  <%= f.text_field :message, placeholder: text_placeholder %>
  <% if mode == "decrypt" %>
    <%= f.label :key %>
    <%= f.text_field :key, placeholder: "5 digits" %>
  <% end %>
  <% if mode == "crack" || mode == "decrypt" %>
    <%= f.label :date %>
    <%= f.text_field :date, placeholder: "DDMMYY", "data-provide" => 'datepicker' %>
  <% end %>
  <%= f.submit button_text %>
<% end %>
